<% layout("/layouts/boilerplate")%>
<body>
    <h2>Full Content showed here.</h2>

    <div class="card" style="width: 60rem;">     
         <img src="<%= list.image %>" class="card-image" alt=" Error">
          <div class="card-body">
               <h5 class="card-text"> <b class="card-title"> <%=list.title%> </b> </h5>
                    <p><%= list.description %></p> 
               <p>&#8377; <%= list.price.toLocaleString("en-IN") %> /night</p> 
               <p><%= list.location %>, <%= list.country %></p>
          </div>

          <div class="card-body link">
               <a href="/listings/<%=list._id%>/edit" class="card-link btn btn-success">Edit</a>
               <form method="POST" action="/listings/<%= list._id%>?_method=DELETE">
                    <button class="btn btn-danger">Delete</button>
               </form>
          </div>
 </div>

</body>
